<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:backgroundTint="#DEDFD4"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:background="@drawable/boder"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
              <LinearLayout
                  android:layout_weight="1.5"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
                  <androidx.cardview.widget.CardView
                      android:layout_gravity="center"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="10dp"
                      card_view:cardCornerRadius="5dp"
                      card_view:cardElevation="10dp">
                      <ImageView
                          android:id="@+id/ivshipper"
                          android:layout_gravity="center"
                          android:layout_margin="10dp"
                          android:src="@drawable/user"
                          android:layout_width="100dp"
                          android:layout_height="wrap_content"/>
                  </androidx.cardview.widget.CardView>
              </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_weight="3 "
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginBottom="2dp"
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="07-07-2021 10:59" />

                    <TextView
                        android:textColor="#FF0000"
                        android:id="@+id/shipname"
                        android:textSize="18dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NGUYỄN VĂN TUYỂN" />

                    <TextView
                        android:textColor="#0027FF"
                        android:id="@+id/shipphone"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0962280702" />

                    <TextView
                        android:textColor="#714A05"
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="THE COFFE HOUSE" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/boder_item"
                    android:backgroundTint="#fc6011"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Shipper" />

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/boder_item"
                    android:backgroundTint="#fc6011"
                    android:layout_marginRight="10dp"
                    android:id="@+id/button2"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="GỌI" />

                <androidx.appcompat.widget.AppCompatButton
                    android:backgroundTint="#000000"
                    android:layout_marginRight="10dp"
                    android:id="@+id/backmap"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@drawable/boder_item"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="DONE" />

                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>