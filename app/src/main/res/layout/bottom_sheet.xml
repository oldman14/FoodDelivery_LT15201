<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="product"
            type="com.example.fooddelivery_lt152011.ProductScreen.viewmodel.ProductViewModel" />
    </data>


    <RelativeLayout
        android:id="@+id/bottomSheet_detailproduct"
        tools:context=".ProductScreen.ProductDetailFragment"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
      >
        <ScrollView
            android:layout_above="@+id/layout_quantity_productdetail"
            android:id="@+id/scroll_productdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

        <ImageView
            android:id="@+id/img_detailproduct"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:productImage="@{product.product.ProductImage}"/>
        <RelativeLayout
            android:id="@+id/layout_nameproduct_detailproduct"
            android:background="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_below="@+id/img_detailproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:paddingVertical="5dp"
                android:id="@+id/left_layout_nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{product.product.ProductName}"
                    android:fontFamily="@font/utm_avobold"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="25000đ"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_above="@+id/detailprduct_detaillayout"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/img_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_favorite_24"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YÊU THÍCH"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailprduct_detaillayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/left_layout_nameProduct">

                <TextView
                    android:id="@+id/detail_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chitiet_mon" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:layout_below="@+id/layout_nameproduct_detailproduct"
            android:id="@+id/layut_size_detail_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn 1 size"
                    android:textColor="@color/secondary_font"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/btn_radio_size_nho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhỏ"
                        android:textSize="16dp" />
                    <RadioButton
                        android:id="@+id/btn_radio_size_lon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lớn"
                        android:textSize="16dp" />

                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_quantity_productdetail"
            android:gravity="bottom"
            android:paddingVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_minus24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25dp"
                    android:paddingHorizontal="20dp"
                    android:layout_gravity="center_vertical"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_24"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn món"
                android:textSize="13dp"
                android:onClick="@{()->product.addItemToCart(product.product)}"
                android:fontFamily="@font/utm_avo"
                android:background="@drawable/boder"
                android:layout_marginHorizontal="8dp"/>
        </LinearLayout>
    </RelativeLayout>

</layout>
