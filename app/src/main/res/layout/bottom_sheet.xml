        </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_quantity_productdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_button"
                    android:id="@+id/btn_minus_quantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_minus24"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_quantity_detail_product"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_vertical"/>
                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_button"
                    android:id="@+id/btn_plus_quantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add_24"/>
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp">
                <Button
                    android:id="@+id/btn_chonMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn món"
                    android:textSize="15dp"
                    android:textAllCaps="false"
                    android:onClick="@{()->handleClick.addItemProduct(product.product,product.quantityItem,product.size)}"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@drawable/boder"
                    android:layout_marginHorizontal="8dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
