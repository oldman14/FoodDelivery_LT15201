<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="THÔNG TIN CÁ NHÂN"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
       />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="200dp"
           android:layout_marginBottom="10dp"
           android:id="@+id/img"
           android:layout_height="200dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:src="@drawable/hung"/>

       <ImageView
           android:id="@+id/imgcapture"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignStart="@+id/img"
           android:layout_alignTop="@+id/img"
           android:layout_alignEnd="@+id/img"
           android:layout_marginStart="152dp"
           android:layout_marginLeft="250dp"
           android:layout_marginTop="150dp"
           android:layout_marginEnd="-3dp"
           android:background="@drawable/boder_avatar"
           android:padding="5dp"
           android:src="@drawable/camera" />
   </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/edtName"
        android:layout_height="wrap_content"
        android:hint="Nhập tên" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/edtEmail"
            android:layout_height="wrap_content"
            android:hint="Nhập Email" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/edtBirthday"
            android:layout_height="wrap_content"
            android:hint="Nhập ngày sinh" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/pass2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddInfo"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="LƯU"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnCancleInfo"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="HỦY"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>