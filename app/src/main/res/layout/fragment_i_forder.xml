<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.IForderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="#115C95"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/back"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text=" ĐƠN ĐANG GIAO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/dieuhuong"
                    android:layout_margin="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:background="@drawable/dieuhuong"
                    android:text="Điều Hướng   ➦  "
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="1.25"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#EAE3E3"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="25dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="#FF1100"
                        android:gravity="center"
                        android:text="ĐIỂM GIAO HÀNG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvlocationOrder"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:text="83 Đường 46 P.Hiệp Bình Quận Thủ ĐỨc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="#EAE3E3"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="25dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgUser"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/user"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tvnameUser"
                            android:textStyle="bold"
                            android:textColor="#FF1100"
                            android:text="Nguyễn Văn Tuyển"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/phoneUser"
                            android:textColor="#000000"
                            android:text="0962280702"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                       <RelativeLayout
                           android:layout_margin="10dp"
                           android:background="@drawable/boder_tron"
                           android:layout_gravity="center"
                           android:layout_width="30dp"
                           android:layout_height="30dp">
                           <ImageView
                               android:padding="2dp"
                               android:id="@+id/call"
                               android:layout_centerHorizontal="true"
                               android:layout_centerVertical="true"
                               android:src="@drawable/ic_call_24"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"/>
                       </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EAE3E3"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="25dp">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_weight="2"
                       android:layout_margin="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"/>
                   <TextView
                       android:background="@drawable/boder_bottom"
                       android:id="@+id/note"
                       android:text="giao nhanh trước 12 giờ nha đói bụng lắm!!!"
                       android:layout_weight="0.5"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"/>
               </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:background="#3A3636"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:id="@+id/total"
                    android:layout_centerVertical="true"
                    android:text="TỔNG : "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/total"
                    android:layout_centerVertical="true"
                    android:text="300.000 VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/boder_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:text="XÁC NHẬN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>